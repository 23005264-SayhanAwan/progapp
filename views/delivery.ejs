<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <%- include ('partials/navbar.ejs') %>
        <title>Delivery Address</title>
    </head>
<body>
   

    <div class="container">
        <br>
        <div class="text-center"><h2>Delivery Address</h2></div>
        <br>
        <div class="text-center">
            <form action="/delivery" method="POST">
                <label for="unit_number">Unit Number:</label><br>
                <input type="text" id="unit_number" name="unit_number" required><br><br>

                <label for="postalcode">Postal Code:</label><br>
                <input type="text" id="postalcode" name="postalcode" required><br><br>

                <button type="submit">Submit Address</button>
            </form>
        </div>
    </div>
</body>
</html>

