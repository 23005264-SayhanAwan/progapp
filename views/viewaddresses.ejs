<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Healthy Mealmaker - Delivery Addresses</title>
    <%- include('partials/navbar.ejs') %>
    <table class="table table-hover small text-center">
        <thead>
            <tr>
                <th width="100">Unit Number</th>
                <th width="100">Postal Code</th>
                <th width="50">Delete</th>
                <th width="50">Edit</th>
            </tr>
        </thead>
        <tbody>
            <% addresses.forEach(address => { %>
                <tr>
                    <td><%= address.unit_number %></td>
                    <td><%= address.postalcode %></td>
                    <td><a href="/deleteaddress/<%= address.delivery_id %>" onclick="return confirm('Are you sure you want to delete this address?')">Delete</a></td>
                    <td><a href="/editaddress/<%= address.delivery_id %>">Edit</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>

